<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основные стили -->

    <!-- Базовый стиль для кнопок -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль для кнопки "Проверить ответ" -->
    <style name="CheckAnswerButton" parent="ButtonStyle">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Базовый стиль для кнопок навигации -->
    <style name="NavigationButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingVertical">8dp</item> <!-- Уменьшаем вертикальные отступы -->
        <item name="android:paddingHorizontal">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- Стиль для кнопки "Назад" -->
    <style name="NavigationButton.Prev" parent="NavigationButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_left</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Стиль для кнопки "Напред" -->
    <style name="NavigationButton.Next" parent="NavigationButton">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ChoiceCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/item_choice</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ChoiceRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/item_choice</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="QuestionHeaderStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="NavigationButtonsContainer">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>
</resources>
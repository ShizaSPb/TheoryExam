<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для текста баллов -->
    <style name="PointsTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Стиль для основного текста вопроса -->
    <style name="QuestionTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Базовый стиль для кнопок -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль для кнопки "Проверить ответ" -->
    <style name="CheckAnswerButton" parent="ButtonStyle">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стиль для кнопок навигации -->
    <style name="NavigationButton" parent="ButtonStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <!-- Стиль для RadioButton вариантов ответов -->
    <style name="ChoiceRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/bg_choice_selector</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Стиль для предупреждения о множественных ответах -->
    <style name="MultipleAnswersWarning">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="CategoryItem">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CategoryItem.Selected">
        <item name="android:background">@color/selected_item_background</item>
        <item name="android:textColor">@color/selected_item_text</item>
    </style>
</resources>
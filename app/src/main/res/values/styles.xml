<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основные стили -->
    <style name="PointsTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Базовый стиль для кнопок -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль для кнопки "Проверить ответ" -->
    <style name="CheckAnswerButton" parent="ButtonStyle">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Базовый стиль для кнопок навигации -->
    <style name="NavigationButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- Стиль для кнопки "Назад" -->
    <style name="NavigationButton.Prev" parent="NavigationButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_left</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Стиль для кнопки "Напред" -->
    <style name="NavigationButton.Next" parent="NavigationButton">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="MultipleAnswersWarning">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="CategoryItem">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CategoryItem.Selected">
        <item name="android:background">@color/selected_item_background</item>
        <item name="android:textColor">@color/selected_item_text</item>
    </style>

    <style name="QuestionHeaderStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ChoiceCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/item_choice</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ChoiceRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/item_choice</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ChoiceCheckBox.Limited" parent="ChoiceCheckBox">
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>